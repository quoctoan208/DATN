<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GUI.DatHangActivity">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_back"
                    android:layout_width="40dp"
                    android:layout_height="35dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/edit_txt"
                    android:backgroundTint="#8BC34A"
                    android:padding="10dp"
                    android:src="@drawable/ic_left" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/baloo2_semibold"
                    android:text="Thanh toán"
                    android:textColor="@color/black"
                    android:textSize="30dp" />

            </LinearLayout>

            <EditText
                android:id="@+id/txt_hoten"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/edit_txt"
                android:backgroundTint="#8BC34A"
                android:drawableStart="@drawable/ic_baseline_contact_phone_24"
                android:drawablePadding="10dp"
                android:fontFamily="@font/baloo2_semibold"
                android:hint="Họ tên"
                android:imeOptions="actionNext"
                android:maxLength="100"
                android:enabled="false"
                android:paddingStart="20dp"
                android:textColor="@color/white"
                android:textColorHint="@color/white" />

            <EditText
                android:id="@+id/txt_sdt"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/edit_txt"
                android:backgroundTint="#8BC34A"
                android:drawableStart="@drawable/ic_baseline_contact_phone_24"
                android:drawablePadding="10dp"
                android:fontFamily="@font/baloo2_semibold"
                android:hint="Số điện thoại"
                android:imeOptions="actionNext"
                android:inputType="number"
                android:maxLength="100"
                android:paddingStart="20dp"
                android:textColor="@color/white"
                android:textColorHint="@color/white" />

            <EditText
                android:id="@+id/txt_diachi"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/edit_txt"
                android:backgroundTint="#8BC34A"
                android:drawableStart="@drawable/ic_baseline_maps_home_work_24"
                android:drawablePadding="10dp"
                android:fontFamily="@font/baloo2_semibold"
                android:hint="Địa chỉ"
                android:imeOptions="actionNext"
                android:inputType="text"
                android:maxLength="100"
                android:paddingStart="20dp"
                android:textColor="@color/white"
                android:textColorHint="@color/white" />

            <EditText
                android:id="@+id/txt_ghichu"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/edit_txt"
                android:backgroundTint="#8BC34A"
                android:drawableStart="@drawable/ic_notes"
                android:drawablePadding="10dp"
                android:fontFamily="@font/baloo2_semibold"
                android:hint="Ghi chú"
                android:imeOptions="actionNext"
                android:inputType="text"
                android:maxLength="100"
                android:paddingStart="20dp"
                android:textColor="@color/white"
                android:textColorHint="@color/white" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="vertical">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/list_item"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/baloo2_semibold"
                        android:text="Tổng thanh toán :"
                        android:textColor="@color/black"
                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/txt_ttt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/baloo2_semibold"
                        android:text="0"
                        android:textColor="#FF5722"
                        android:textSize="25dp" />
                </LinearLayout>


                <android.widget.Button
                    android:id="@+id/btn_tt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="40dp"
                    android:background="@drawable/edit_txt"
                    android:backgroundTint="#4CAF50"
                    android:text="Thanh toán"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="25sp" />

            </LinearLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>