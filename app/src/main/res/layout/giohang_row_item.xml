<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="3dp"
    android:layout_marginTop="5dp"
    android:layout_marginEnd="10dp"
    android:layout_marginBottom="5dp"
    android:backgroundTint="@color/white"
    android:orientation="horizontal"
    app:cardCornerRadius="10dp"
    app:cardElevation="5dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_delete"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:padding="5dp"
            android:layout_marginEnd="10dp"
            android:layout_gravity="end"
            android:src="@drawable/ic_clear" />

        <LinearLayout
            android:id="@+id/layout_food"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/check_itemspGioHang"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:checked="false"
                />

            <ImageView
                android:id="@+id/imganhSP_giohang"
                android:layout_width="80dp"
                android:layout_height="90dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp"
                android:adjustViewBounds="true"
                android:src="@drawable/anhspdemo" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="5dp"
                android:layout_gravity="top"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txt_tensp_giohang"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/lato_bolditalic"
                        android:text="Tên sản phẩm"
                        android:textColor="@color/black"
                        android:textSize="19dp" />


                </LinearLayout>


                <TextView
                    android:id="@+id/txt_masv_giohang"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="3dp"
                    android:text="Mã sinh viên"
                    android:textColor="@color/black"
                    android:textSize="15dp" />


                <TextView
                    android:id="@+id/txt_dongiaSP_giohang"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/baloo2_semibold"
                    android:text="$ 200.000"
                    android:textColor="@color/RED"
                    android:textSize="17dp" />


            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginStart="125dp"
                android:background="@drawable/bogoc_vuongvienden"
                android:gravity="center">

                <ImageView
                    android:id="@+id/img_tru"
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bogoc_vuongvienden"
                    android:paddingStart="5dp"
                    android:paddingEnd="5dp"
                    android:src="@drawable/ic_minus" />

                <TextView
                    android:id="@+id/txt_soluongsp_giohang"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:fontFamily="@font/baloo2_semibold"
                    android:gravity="center"
                    android:text="1"
                    android:textColor="#009688"
                    android:textSize="14dp" />

                <ImageView
                    android:id="@+id/img_cong"
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bogoc_vuongvienden"
                    android:paddingStart="5dp"
                    android:paddingEnd="5dp"
                    android:src="@drawable/ic_plus"
                     />
            </LinearLayout>


        </LinearLayout>

    </LinearLayout>


</androidx.cardview.widget.CardView>