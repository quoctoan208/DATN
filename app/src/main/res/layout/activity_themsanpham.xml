<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".GUI.ThemSanPham"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:text="Đăng Sản Phẩm"
        android:gravity="center"
        android:background="@color/text"
        android:textSize="25dp"
        android:fontFamily="@font/baloo2_semibold"
        android:textStyle="bold"
        android:textColor="@color/white"/>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="20dp"
        android:padding="10dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:id="@+id/layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginStart="5dp"
                    android:text="Thể Loại:"
                    android:textColor="@color/black"
                    android:textSize="16dp" />

                <Spinner
                    android:id="@+id/planets_spinner"
                    android:layout_width="match_parent"
                    android:background="@drawable/bogoc_itemview"
                    android:layout_marginStart="10dp"
                    android:layout_height="wrap_content" />

            </LinearLayout>



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginStart="5dp"
                android:layout_marginBottom="10dp"
                android:text="Ảnh sản phẩm:"
                android:textColor="@color/black"
                android:textSize="16dp" />


            <LinearLayout
                android:id="@+id/layout_imgthemanh"
                android:visibility="visible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginBottom="10dp"
                android:layout_gravity="center"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/add_imgAnhSP1"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:layout_gravity="center"/>
                <ImageView
                    android:id="@+id/add_imgAnhSP2"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:layout_marginStart="5dp"
                    android:layout_gravity="center"/>
                <ImageView
                    android:id="@+id/add_imgAnhSP3"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:layout_marginStart="5dp"
                    android:layout_gravity="center"/>
                <ImageView
                    android:id="@+id/add_imgAnhSP4"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:layout_marginStart="5dp"
                    android:layout_gravity="center"/>
                <ImageView
                    android:id="@+id/add_imgAnhSP5"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:layout_marginStart="5dp"
                    android:layout_gravity="center"/>


            </LinearLayout>

            <android.widget.Button
                android:id="@+id/btn_themanhsp"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:background="@drawable/edit_txt"
                android:backgroundTint="@color/backgroud"
                android:layout_marginTop="3dp"
                android:fontFamily="@font/baloo2_semibold"
                android:layout_gravity="center"
                android:text="Thêm Ảnh"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginStart="5dp"
                android:text="Mã Sản Phẩm:"
                />
            <EditText
                android:id="@+id/edt_add_masp"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/bogoc_itemview"
                android:textColor="@color/text"
                android:textColorHint="@color/Edt_text"
                android:layout_marginTop="5dp"
                android:paddingStart="10dp"
                android:textSize="20dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginStart="5dp"
                android:text="Tên Sản Phẩm:"/>
            <EditText
                android:id="@+id/edt_add_tensp"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/bogoc_itemview"
                android:textColor="@color/text"
                android:paddingStart="10dp"
                android:textColorHint="@color/Edt_text"
                android:layout_marginTop="5dp"
                android:textSize="20dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginStart="5dp"
                android:text="Số Lượng Sản Phẩm:"/>
            <EditText
                android:id="@+id/edt_add_soluongsp"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:paddingStart="10dp"
                android:background="@drawable/bogoc_itemview"
                android:textColor="@color/text"
                android:textColorHint="@color/Edt_text"
                android:layout_marginTop="5dp"
                android:textSize="20dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginStart="5dp"
                android:text="Giá Bán Sản Phẩm:"/>
            <EditText
                android:id="@+id/edt_add_giabansp"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:paddingStart="10dp"
                android:background="@drawable/bogoc_itemview"
                android:textColor="@color/text"
                android:textColorHint="@color/Edt_text"
                android:layout_marginTop="5dp"
                android:textSize="20dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginStart="5dp"
                android:text="Mô tả chi tiết sản phẩm ( Ít hơn 200 ký tự ):"/>
            <EditText
                android:id="@+id/edt_add_motasp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="10dp"
                android:paddingEnd="5dp"
                android:background="@drawable/bogoc_itemview"
                android:textColor="@color/text"
                android:textColorHint="@color/Edt_text"
                android:layout_marginTop="5dp"
                android:textSize="20dp"/>

            <android.widget.Button
                android:id="@+id/btn_addsanpham"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:layout_gravity="center"
                android:background="@drawable/edit_txt"
                android:backgroundTint="@color/RED"
                android:drawableRight="@drawable/notepad"
                android:fontFamily="@font/lato_bolditalic"
                android:text="Đăng Sản Phẩm"
                android:textColor="#FFFFFF"
                android:textSize="20dp" />
        </LinearLayout>


    </androidx.core.widget.NestedScrollView>



</LinearLayout>