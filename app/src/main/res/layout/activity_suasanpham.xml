<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".GUI.SuaSanPham">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/text"
        android:gravity="center"
        android:text="Sửa Thông Tin Sản Phẩm"
        android:textColor="@color/white"
        android:textSize="24dp"
        android:textStyle="bold" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:fillViewport="true"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginBottom="10dp"
                    android:text="Thể Loại:"
                    android:textColor="#171515"
                    android:textSize="17dp" />

                <Spinner
                    android:id="@+id/planets_spinner_suasp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/bogoc_itemview" />

            </LinearLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:text="Ảnh sản phẩm:"
                android:textColor="#171515"
                android:textSize="17dp" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginHorizontal="16dp"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/suasp_imgAnhSP1"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:layout_gravity="center" />

                <ImageView
                    android:id="@+id/suasp_imgAnhSP2"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="5dp" />

                <ImageView
                    android:id="@+id/suasp_imgAnhSP3"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="5dp" />

                <ImageView
                    android:id="@+id/suasp_imgAnhSP4"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="5dp" />

                <ImageView
                    android:id="@+id/suasp_imgAnhSP5"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="5dp" />


            </LinearLayout>

            <android.widget.Button
                android:id="@+id/btn_suaanhsp"
                android:layout_width="100dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:background="@drawable/bogoc_text"
                android:layout_marginTop="3dp"
                android:backgroundTint="@color/backgroud"
                android:text="Chọn Ảnh" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="10dp"
                android:textColor="#171515"
                android:text="Tên Sản Phẩm:" />

            <EditText
                android:id="@+id/edt_sua_tensp"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="5dp"
                android:paddingStart="20dp"
                android:background="@drawable/bogoc_itemview"
                android:textColor="@color/black"
                android:textColorHint="@color/Edt_text"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="10dp"
                android:textColor="#171515"
                android:text="Số Lượng Sản Phẩm:" />

            <EditText
                android:id="@+id/edt_sua_soluongsp"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="5dp"
                android:paddingStart="20dp"
                android:background="@drawable/bogoc_itemview"
                android:textColor="@color/black"
                android:textColorHint="@color/Edt_text"
                 />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="10dp"
                android:textColor="#171515"
                android:text="Giá Bán Sản Phẩm:" />

            <EditText
                android:id="@+id/edt_sua_giabansp"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="5dp"
                android:paddingStart="20dp"
                android:background="@drawable/bogoc_itemview"
                android:textColor="@color/black"
                android:textColorHint="@color/Edt_text"
                 />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="10dp"
                android:textColor="#171515"
                android:text="Mô tả chi tiết sản phẩm ( Ít hơn 200 ký tự ):" />

            <EditText
                android:id="@+id/edt_sua_motasp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:paddingStart="20dp"
                android:background="@drawable/bogoc_itemview"
                android:textColor="@color/black"
                android:textColorHint="@color/Edt_text"
                 />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <android.widget.Button
                    android:id="@+id/btn_submitsuasanpham"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginTop="15dp"
                    android:paddingEnd="19dp"
                    android:background="@drawable/edit_txt"
                    android:backgroundTint="@color/Button"
                    android:drawableRight="@drawable/ic_cart"
                    android:fontFamily="@font/baloo2_semibold"
                    android:gravity="center"
                    android:text="Cập Nhật Sản Phẩm"
                    android:textColor="#FFFFFF"
                    android:textSize="20dp" />

                <android.widget.Button
                    android:id="@+id/btn_xoasanpham"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginTop="7dp"
                    android:paddingEnd="15dp"
                    android:background="@drawable/edit_txt"
                    android:backgroundTint="#ED2F2F"
                    android:drawableRight="@drawable/shutdown"
                    android:fontFamily="@font/baloo2_semibold"
                    android:gravity="center"
                    android:text="Xóa Sản Phẩm"
                    android:textColor="#FFFFFF"
                    android:textSize="20dp" />

                <android.widget.Button
                    android:id="@+id/btn_cancesuasanpham"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_gravity="center"
                    android:paddingEnd="19dp"
                    android:background="@drawable/edit_txt"
                    android:layout_marginTop="7dp"
                    android:layout_marginBottom="40dp"
                    android:backgroundTint="#919598"
                    android:drawableRight="@drawable/baseline_navigate_next_24"
                    android:fontFamily="@font/baloo2_semibold"
                    android:text="CANCEL"
                    android:textColor="#FFFFFF"
                    android:textSize="20dp" />
            </LinearLayout>
        </LinearLayout>

    </androidx.core.widget.NestedScrollView>


</LinearLayout>