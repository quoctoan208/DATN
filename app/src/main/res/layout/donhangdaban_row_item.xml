<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="3dp"
    android:layout_marginEnd="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="5dp"
    android:orientation="horizontal"
    app:cardCornerRadius="10dp"
    app:cardElevation="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:background="@drawable/bogoc_itemview"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/layout_donhang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="3dp"
                android:layout_marginEnd="5dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txt_madonhang_donhangban"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:fontFamily="@font/baloo2_semibold"
                        android:maxLines="1"
                        android:text="Mã ĐH:1234567892"
                        android:textColor="@color/black"
                        android:textSize="15dp" />
                    <TextView
                        android:id="@+id/txt_SDT_donhangban"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:fontFamily="@font/baloo2_semibold"
                        android:maxLines="1"
                        android:text="SỐ ĐT:1234567892"
                        android:textColor="#E91E63"
                        android:textSize="15dp" />

                </LinearLayout>


                <TextView
                    android:id="@+id/txt_diachinhan_donhangbanban"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/baloo2_semibold"
                    android:text="Địa chỉ nhận"
                    android:textColor="@color/black"
                    android:textSize="15dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/txt_phuongthucthanhtoan_donhangban"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/baloo2_semibold"
                        android:text="Nhận hàng thanh toán"
                        android:textColor="@color/black"
                        android:textSize="15dp" />

                </LinearLayout>


                <TextView
                    android:id="@+id/txt_tongtien_donhangban"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:fontFamily="@font/baloo2_semibold"
                    android:maxLines="1"
                    android:text="Tổng tiền:"
                    android:textColor="#E91E63"
                    android:textSize="16dp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_thoigian_donhangban"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_clock"
                android:drawablePadding="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/baloo2_semibold"
                android:paddingStart="10dp"
                android:gravity="center"
                android:text="thời gian"
                android:textColor="#FF9800"
                android:textSize="16dp" />


        </LinearLayout>


            <TextView
                android:id="@+id/txt_donban_tinhtrangdonban"
                android:layout_width="match_parent"
                android:layout_marginStart="5dp"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="7dp"
                android:textSize="12dp"
                android:text="Tình trạng đơn hàng"/>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:gravity="center"
            android:orientation="horizontal">

            <android.widget.Button
                android:id="@+id/btn_huydonhangban"
                android:layout_width="170dp"
                android:layout_height="30dp"
                android:layout_gravity="end"
                android:background="@drawable/edit_txt"
                android:backgroundTint="@color/RED"
                android:fontFamily="@font/baloo2_semibold"
                android:text="Hủy đơn hàng"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textSize="16dp" />


            <android.widget.Button
                android:id="@+id/btn_xacnhandonhangban"
                android:layout_width="170dp"
                android:layout_height="30dp"
                android:background="@drawable/edit_txt"
                android:layout_marginStart="15dp"
                android:backgroundTint="#4CAF50"
                android:fontFamily="@font/baloo2_semibold"
                android:text="Xác nhận đơn hàng"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textSize="16dp" />
        </LinearLayout>


    </LinearLayout>


</androidx.cardview.widget.CardView>